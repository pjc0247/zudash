{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "outDir": "lib",
      "sourceMap": true,
      "moduleResolution": "node",
      "strict": false,
      "target": "es2017",
      "allowJs": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": [],
      "lib": [
        "ES2017",
        "DOM",
        "es2015.reflect",
      ]
    },
    "compileOnSave": true,
    "include": [
      "src", "index.ts"
    ],
    "exclude": ["node_modules"]
  }
  